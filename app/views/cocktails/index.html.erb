<%render './shared/navbar'%>

<h1>Cocktails</h1>
<p><%= link_to "Add a cocktail", new_cocktail_path %></p>



<div class="cards">
  <% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/300x200/?<%=cocktail.name%>)">
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>
  <%end%>
</div>
